@{
    ViewData["Title"] = "Home Page";
}

@{
    bool isStudent = User.IsInRole("Student"); 
    bool isProfesor = User.IsInRole("Profesor");
}

@if (isStudent == false && isProfesor == false)
{
    <!DOCTYPE html>
    <html lang="ro">
    <head>
        <meta charset="UTF-8" />
        <title>Welcome</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body class="align-items-center justify-content-center">
        <div class="text-center">
            <h2 class="text-white">Bine ai venit! </h2>
            <h2 class="text-white">Pentru a putea juca, te rugam sa iti faci un cont ! </h2>
        </div>
    </body>
    </html>
}

@if (isStudent == true)
{
    <script type="text/javascript">
        window.location.href = '@Url.Action("Index", "Students")';
    </script>
}
else if (isProfesor == true)
{
    <script type="text/javascript">
        window.location.href = '@Url.Action("Index", "Profesors")';
    </script>
}