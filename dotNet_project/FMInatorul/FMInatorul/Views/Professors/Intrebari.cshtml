@model IEnumerable<FMInatorul.Models.IntrebariRasp>

@{
    ViewData["Title"] = "Intrebari Nevalidate";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container2 mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <!-- Display column headers -->
                <th>
                    @Html.DisplayNameFor(model => model.intrebare)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.raspunsCorect)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- Iterate through each item in the model and display its properties -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.intrebare)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.raspunsCorect)
                    </td>
                    <td>
                        <!-- Button to validate the question -->
                        <a asp-action="Valideaza" asp-route-id="@item.Id" class="btn btn-success btn-sm">Validează</a>
                    </td>
                    <td>
                        <!-- Button to delete the question -->
                        <a asp-action="NuValideaza" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Șterge Întrebarea</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container2 {
        max-width: 900px;
        margin: auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .table {
        margin-bottom: 0;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
        border: 1px solid #454d55;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.1);
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
