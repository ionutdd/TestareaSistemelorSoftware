@model FMInatorul.Models.Profesor

@{
    // Set the title of the page
    ViewData["Title"] = "Editare Materie";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Edit Materie</h2>

@using (Html.BeginForm(controllerName: "Professors", actionName: "EditMaterie", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    <label>Selectati Materia</label>
    <br />
    // Drop-down list for selecting a subject
    @Html.DropDownListFor(m => m.MaterieId, new SelectList(Model.Materii, "Value", "Text"), "Selectati materia", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.MaterieId, null, new { @class = "text-danger" })

    // Hidden fields for properties that should not be directly edited by the user
    @Html.HiddenFor(m => m.CompletedProfile, new { Value = Model.CompletedProfile })
    @Html.HiddenFor(m => m.ApplicationUserId, new { Value = Model.ApplicationUserId })
    @Html.HiddenFor(m => m.ApplicationUser, new { Value = Model.ApplicationUser })
    @Html.HiddenFor(m => m.FacultateID, new { Value = Model.FacultateID})
    @Html.HiddenFor(m => m.Facultate, new { Value = Model.Facultate })

    <br />
    <br />
    // Submit button to save changes
    <button type="submit" class="btn btn-primary">Save</button>
}
