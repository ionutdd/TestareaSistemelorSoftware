@{
    var materii = ViewBag.Materii as List<Materie>;
}

<div class="container">
    <div class="row">
        @foreach (var materie in materii)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100 shadow-sm" style="background: rgba(241, 241, 241, 0.4); backdrop-filter: blur(4px);">
                    <div class="card-body d-flex flex-column">
                        <div class="title-box">
                            <h3 class="card-title">@materie.nume</h3>
                        </div>
                        <div class="description-box flex-grow-1">
                            <h4 class="card-subtitle">Anul de studiu: @materie.anStudiu</h4>
                            <h4 class="card-subtitle">Semestrul: @materie.semestru</h4>
                            <p class="card-text">@materie.descriere</p>
                        </div>
                        <a href="/Students/UploadPdf?materie=@materie.Id" class="btn btn-success mt-auto">Descoperă întrebările</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .title-box {
        height: 60px; /* Înălțimea fixă pentru titlu */
        display: flex;
        flex-direction: column; /* Așezăm elementele într-o coloană */
        align-items: center;
        justify-content: center;
        margin-bottom: 10px; /* Adăugăm spațiu între titlu și restul conținutului */
    }

    .title-box h2 {
        margin-bottom: 0; /* Eliminăm margin-bottom pentru a elimina spațiul suplimentar */
        color: white; /* Schimbăm culoarea textului la alb */
    }

    .card-subtitle {
        margin-bottom: 15px; /* Adăugăm spațiu între elementele de sub titlu */
    }

    .description-box {
        border: 0px;
        padding: 10px;
        margin: 0; /* Eliminăm marginile */
    }

    .btn-success {
        background-color: #A0522D;
        border-color: #A0522D;
    }

    .btn-success:hover {
        background-color: #8B4533;
        border-color: #8B4533;
    }

</style>
